{
    "agent": {
        "continuous": true,
        "action_dim": 3,
        "lr": 0.0003,
        "gamma": 0.99,
        "gae_lambda": 0.95,
        "clip_epsilon": 0.2,
        "value_coef": 0.5,
        "entropy_coef": 0.01,
        "n_steps": 2048,
        "n_epochs": 10,
        "batch_size": 64,
        "max_grad_norm": 0.5
    },
    "env": {
        "frame_stack": 4,
        "skip_frames": 2
    },
    "training": {
        "max_episodes": 900,
        "target_score": 750,
        "convergence_episodes": 100,
        "convergence_threshold": 10,
        "save_frequency": 100,
        "eval_frequency": 100,
        "eval_episodes": 10
    },
    "logging": {
        "log_dir": "logs",
        "use_tensorboard": true
    },
    "checkpoints": {
        "save_dir": "checkpoints"
    },
    "seed": 42,
    "device": "cpu"
}